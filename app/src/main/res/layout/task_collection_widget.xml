<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="8dp"
    android:orientation="vertical"
    android:background="@drawable/bg_calendar_day_dialog"
    android:theme="@style/ThemeOverlay.Timetable.AppWidgetContainer">

    <RelativeLayout
        android:id="@+id/layout_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="4dp">

        <TextView
            android:text="과제/시험 일정"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/color_text_primary"
            android:paddingVertical="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_task_widget_today_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:paddingVertical="8dp"
            android:textColor="@color/color_text_secondary"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="2021년 05월 16일, 일요일" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color" />

    <ListView
        android:id="@+id/list_view_task_widget"
        android:overScrollMode="never"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/txt_task_widget_empty"
        android:text="과제/시험 일정이 없습니다."
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center" />

</LinearLayout>