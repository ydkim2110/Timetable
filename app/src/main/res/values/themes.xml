<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Timetable" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Toolbar -->
    <style name="Theme.Timetable.Toolbar">
        <item name="android:textColorSecondary">@color/color_text_primary</item>
        <item name="android:textColor">@color/color_text_primary</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Theme.LemonTree.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.LemonTree.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- SplashActivity -->
    <style name="SplashTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splash</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- BottomSheet -->
    <style name="SelectTypeBottomSheet" parent="Theme.MaterialComponents.DayNight.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="SelectSemesterBottomSheet" parent="Theme.MaterialComponents.DayNight.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="behavior_draggable">false</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet</item>
    </style>

    <!-- DialogFragment -->
    <style name="FullScreenDialog" parent="Theme.Timetable">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="DialogAnimationUpAndDown">
        <item name="android:windowEnterAnimation">@anim/fade_slide_up</item>
        <item name="android:windowExitAnimation">@anim/fade_slide_down</item>
    </style>

    <!-- Chip -->
    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="checkedIconTint">@color/white</item>
        <item name="rippleColor">@color/white_alpha</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginEnd">2dp</item>
    </style>

    <style name="ChipTextBold" parent="TextAppearance.MaterialComponents.Chip">
        <item name="fontFamily"></item>
    </style>

    <style name="ChipTextRegular" parent="TextAppearance.MaterialComponents.Chip">
        <item name="fontFamily"></item>
    </style>

    <!-- Text -->
    <style name="CalendarTopText">
        <item name="android:textColor">@color/color_text_primary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CalendarTopTextSun">
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CalendarTopTextSat">
        <item name="android:textColor">@android:color/holo_blue_dark</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- ToggleButton -->
    <style name="SubjectTypeToggleButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/toggle_text_color_state_list</item>
        <item name="strokeColor">@color/orange</item>
        <item name="android:minHeight">42dp</item>
        <item name="backgroundTint">@color/toggle_background_state_list</item>
    </style>
</resources>